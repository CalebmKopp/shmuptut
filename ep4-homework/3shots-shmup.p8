version 42
__lua__
function _init()
	-- this is called once at start
	cls(0)
	shipx = 64
	shipy = 100
	
	shipsx=0	
	shipsy=0
	
	bullx=-20
	bully=-20
	bullet_speed=5
	
	t=0
end

function _update()
	-- update is for gameplay
	--	 (hard 30 fps always)
	t+=1
	--controls
 shipsx=0
 shipsy=0
 
	if btn(0) then
		shipsx=-2
	end
	if btn(1) then
		shipsx=2
	end
	
	if btn(2) then
		shipsy=-2
	end
	
	if btn(3) then
		shipsy=2
	end
	if btnp(5) then
		bullx=shipx
		bully=shipy-2
		sfx(2)
	end
	
	--change ship draw coords
	shipx = shipx + shipsx
	shipy = shipy + shipsy
	
	--move the bullet
	bully=bully-bullet_speed
	
	--checking if we hit edge
	if shipx > 120 then
		shipx=0
	end
	if shipx < 0 then
		shipx=120
	end	
	if shipy > 120 then
		shipy=0
	end
	if shipy < 0 then
		shipy=120
	end
end

function _draw()
	-- draw is called when a frame
	--  drawn to the screen
	--  (30 fps attempted)
	cls(0)
	-- draw bullet
	spr(59, bullx, bully)
	-- the ship should always be
	-- 	the last thing drawn
	spr(20, shipx, shipy)
end

